#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/sandbox/wails/hermes-gui/node_modules/ts-node/dist/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules/ts-node/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules:/mnt/c/sandbox/wails/node_modules:/mnt/c/sandbox/node_modules:/mnt/c/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/sandbox/wails/hermes-gui/node_modules/ts-node/dist/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules/ts-node/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules:/mnt/c/sandbox/wails/node_modules:/mnt/c/sandbox/node_modules:/mnt/c/node_modules:/mnt/c/sandbox/wails/hermes-gui/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../ts-node/dist/bin-transpile.js" "$@"
else
  exec node  "$basedir/../ts-node/dist/bin-transpile.js" "$@"
fi
